@model Presentation.Web.Colpatria.Controllers.DownloadReportModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_LayoutReport.cshtml";

}

<h2>title</h2>
<div id="accordion" role="tablist" aria-multiselectable="true">
    <div class="card">
        <div class="card-header" role="tab" id="headingOne">
            <h5 class="mb-0">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Descargar reporte de transaciones
                </a>
            </h5>
        </div>

        <div id="collapseOne" class="collapse in" role="tabpanel" aria-labelledby="headingOne">
            <div class="card-block">
                <form data-x="x-validate" action="@Url.Action("Download", "Report")" method="POST" class="form-step">
                   
                    <div class="form-group">
                        <div class="col-md-3">
                            <span class="input input--hoshi">
                                <input name="StartDate" class="input__field input__field--hoshi validate[required] datetimepicker" type="text" id="StartDate">
                                <label class="input__label input__label--hoshi input__label--hoshi-color-1" for="StartDate">
                                    <span class="input__label-content input__label-content--hoshi input-block-level ">Fecha Incial:<span class="symbol required"></span></span>
                                </label>
                            </span>
                        </div>
                        <div class="col-md-3">
                            <span class="input input--hoshi">
                                <input name="EndDate" class="input__field input__field--hoshi validate[required] validateMaxToday" type="text" id="EndDate">
                                <label class="input__label input__label--hoshi input__label--hoshi-color-1" for="EndDate">
                                    <span class="input__label-content input__label-content--hoshi input-block-level">Fecha Final:<span class="symbol required"></span></span>
                                </label>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-center margTop4">
                            <button type="submit" class="btn btn-danger enviar nomargin ">
                                Descargar
                            </button>
                        </div>
                    </div>
                    @Html.Partial("_ValidationSummary", ViewData.ModelState)
                    <div style="clear: both"></div>
                </form>
            </div>
        </div>
    </div>
    
    
</div>