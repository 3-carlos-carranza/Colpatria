@model dynamic
@{
    ViewBag.Title = "Datos personales";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="legal">
    <img src="~/Images/Content/legal.png" alt="Alternate Text" />
</div>
<div class="step-content">
    <div class="linea-step">
        <div class="col-xs-12 col-sm-6 desc-step">
            <p>Empieza a disfrutar de tu Tarjeta de Crédito</p>
        </div>
        <div class="col-xs-12 col-sm-6 li-step">
            <div class="col-xs-4 col-sm-4 bull active"><span>1.</span> Ingresa</div>
            <div class="col-xs-4 col-sm-4 bull">2. Valida</div>
            <div class="col-xs-4 col-sm-4 bull">3. Solicita</div>
        </div>
    </div>
    <div class="col-xs-12 block radius">
        <form action="@Url.Action("Register", "Requests")" method="POST" data-x="x-validate" class="form-step">
            <div class="step-title">
                <strong>PASO 1.</strong> Ingresa tus datos, no olvides llenar todos los campos.
            </div>
            <div class="form-group">
                    <div class="col-xs-12 col-md-6">
                        <span class="input input--hoshi">
                            <input name="FirstName" class="input__field input__field--hoshi validate[required, maxSize[30], custom[onlyLetterSp]] onlyletter" type="text" id="FirstName" placeholder="" value="">
                            <label class="input__label input__label--hoshi input__label--hoshi-color-1" for="FirstName">
                                <span class="input__label-content input__label-content--hoshi input-block-level ">Nombre<span class="symbol required"></span></span>
                            </label>
                        </span>
                    </div>
                    <div class="col-xs-6 col-md-3">
                        <span class="input input--hoshi">
                            <input name="FirstLastName" class="input__field input__field--hoshi validate[required, maxSize[15], custom[onlyLetterSp]] onlyletter" type="text" id="FirstLastName" placeholder="" value="">
                            <label class="input__label input__label--hoshi input__label--hoshi-color-1" for="FirstLastName">
                                <span class="input__label-content input__label-content--hoshi input-block-level">Apellidos<span class="symbol required"></span></span>
                            </label>
                        </span>
                    </div>
                    <div class="col-xs-6 col-md-3">
                        <span class="input input--hoshi">
                            <input name="SecondLastName" class="input__field input__field--hoshi validate[required, maxSize[15], custom[onlyLetterSp]] onlyletter" type="text" id="SecondLastName" placeholder="" value="">
                            <label class="input__label input__label--hoshi input__label--hoshi-color-1" for="SecondLastName">
                                <span class="input__label-content input__label-content--hoshi input-block-level"><span class="symbol required"></span></span>
                            </label>
                        </span>
                    </div>
                <div style="clear: both"></div>
            </div>
            <div class="form-group">
                    <div class="col-xs-12 col-md-3">
                        <label>
                            Tipo de documento<span class="symbol required"></span>
                        </label>
                        <select name="DocType" data-x="x-kdropdown" class="validate[required] form-control" placeholder="Tipo de Documento" data-url="/Data/GetDataListValues/"
                                data-value="">
                            <option value="">Seleccione...</option>
                            <option value="Cedula de Ciudadania">Cedula de Ciudadania</option>
                            <option value="Cedula Extranjera">Cedula Extranjera</option>
                            <option value="Carnet Diplomatico">Carnet Diplomatico</option>
                            <option value="Pasaporte">Pasaporte</option>
                            <option value="Registro Civil">Registro Civil</option>
                            <option value="Tarjeta de Identidad">Tarjeta de Identidad</option>
                        </select>
                    </div>
                    <div class="col-xs-12 col-md-3">
                        <span class="input input--hoshi">
                            <input name="Number" type="text" class="input__field input__field--hoshi validate[required,custom[onlyNumberSp]]" data-x="x-autonum" data-asep="" data-adec="," data-vmin="0" data-vmax="9999999999" id="Number" placeholder="" value="">
                            <label class="input__label input__label--hoshi input__label--hoshi-color-1" for="Number">
                                <span class="input__label-content input__label-content--hoshi input-block-level">Número<span class="symbol required"></span></span>
                            </label>
                        </span>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <label for="ExpeditionDate">
                            Fecha de Expedicion<span class="symbol required"></span>
                        </label>
                        
                            <div class='input-group date' id='datepicker1'>
                                <input name="ExpeditionDate" class="validate[required,custom[date]] form-control inp" type="text" id="ExpeditionDate" placeholder="" value="">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                   </div>
                <div style="clear: both"></div>
            </div>
            <div class="form-group">
                    <div class="col-xs-12 col-md-6">
                        <span class="input input--hoshi">
                            <input name="Expedition" class="input__field input__field--hoshi validate[required] onlyletter" type="text" id="Expedition" placeholder="" value="">
                            <label class="input__label input__label--hoshi input__label--hoshi-color-1" for="Expedition">
                                <span class="input__label-content input__label-content--hoshi input-block-level">Lugar de expediciòn de Documento<span class="symbol required"></span></span>
                            </label>
                        </span>
                    </div>
                    <div class="col-xs-12 col-md-3">
                        <span class="input input--hoshi">
                            <input name="address" class="input__field input__field--hoshi validate[required] onlyletter" type="text" id="address" placeholder="" value="">
                            <label class="input__label input__label--hoshi input__label--hoshi-color-1" for="address">
                                <span class="input__label-content input__label-content--hoshi input-block-level">Dirección<span class="symbol required"></span></span>
                            </label>
                        </span>
                    </div>
                    <div class="col-xs-12 col-md-3">
                        <span class="input input--hoshi">
                            <input name="email" class="input__field input__field--hoshi validate[required,custom[email]]" type="email" id="email" placeholder="" value="">
                            <label class="input__label input__label--hoshi input__label--hoshi-color-1" for="email">
                                <span class="input__label-content input__label-content--hoshi input-block-level">Correo electronico<span class="symbol required"></span></span>
                            </label>
                        </span>
                    </div>
                <div style="clear: both"></div>
                </div>
            <div class="form-group">
                <div class="col-xs-12 col-md-3">
                    <span class="input input--hoshi">
                        <input name="telephone" class="input__field input__field--hoshi validate[required,custom[onlyNumberSp]]" type="number" placeholder="" value="">
                        <label class="input__label input__label--hoshi input__label--hoshi-color-1" for="telephone">
                            <span class="input__label-content input__label-content--hoshi input-block-level">Télefono<span class="symbol required"></span></span>
                        </label>
                    </span>
                </div>
                <div class="col-xs-12 col-md-3">
                    <span class="input input--hoshi">
                        <input name="cellphone" class="input__field input__field--hoshi validate[required]" data-mask="999-999-9999" data-x="x-masked" id="cellphone" placeholder="" value="">
                        <label class="input__label input__label--hoshi input__label--hoshi-color-1" for="cellphone">
                            <span class="input__label-content input__label-content--hoshi input-block-level">Celular<span class="symbol required"></span></span>
                        </label>
                    </span>
                </div>
                <div class="col-xs-12 col-md-3 space">
                    <input type="checkbox" class="grey validate[required]" value="" name="" checked="@(ViewBag.Checked)">
                    <label class="check">
                        Acepto términos y condiciones <a class="vermas" href="@Url.Action("TermsAndConditions", "Requests")">VER+</a>
                    </label>
                </div>
                <div class="col-xs-12 col-md-3 space">
                    <button type="submit" class="btn btn-danger pull-right enviar">
                        Siguiente <span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span>
                    </button>
                </div>
                        <div style="clear: both"></div>
                    </div>
             </form>
    </div>
    <div style="clear: both"></div>
</div>
