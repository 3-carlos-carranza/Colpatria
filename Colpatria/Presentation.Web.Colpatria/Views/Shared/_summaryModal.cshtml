@using Core.Entities.Enumerations
@model Core.DataTransferObject.Vib.UserInfoDto
<!-- Modal respuesta de la solicitud -->
<div class="container">

    <!-- Modal -->
    <div class="modal fade" id="response_request" role="dialog">
        <div class="modal-dialog modal-terms">

            <!-- Modal content-->
            <div class="modal-content fond-terms">
                <div class="modal-header mhead">
                    <button type="button" class="close closes" data-dismiss="modal">&times;</button>
                    <h4></h4>
                </div>
                <div class="modal-body text-left">
                    <div class="legal">
                        <img src="~/Images/Content/legal.png" alt="Alternate Text" />
                    </div>
                    <div class="step-content">
                        <div class="linea-step">
                            <div class="col-xs-12 col-sm-6 desc-step">
                                <p>Respuesta de Solicitud</p>
                            </div>
                            <div style="clear: both"></div>
                        </div>
                        <div class="conts">
                            <div class="contents aproved">
                                <p>
                                    <strong>Bogotá, @Model.CreatedDateExecution.ToLongDateString()</strong>
                                </p>
                                <p><strong>Consecutivo No: </strong> <span>@Model.SimpleId</span></p>
                                <p>
                                    <strong>Señor(a) @Model.FullName</strong>
                                </p>
                                <p>
                                    <strong>Asunto:</strong> Solicitud de Cuenta de Ahorros
                                </p>

                                @if (Model.ClassificationWsMotor == "A")
                                {
                                    Html.RenderPartial("~/Views/Request/RequestAproved.cshtml", Model);
                                }
                                else if (Model.ClassificationWsMotor == "R")
                                {
                                    Html.RenderPartial("~/Views/Request/RequestDeclined.cshtml", Model);
                                }
                                else
                                {
                                    Html.RenderPartial("~/Views/Request/RequestPending.cshtml", Model);
                                }
                                <hr />

                                <div class="info">
                                    <div class="col-xs-12 col-sm-8 desc-info">
                                        <div class="chats">
                                            <img src="~/Images/Content/chat-icon.png" alt="Alternate Text" />
                                        </div>
                                        <p class="">
                                            Cualquier duda o inquietud puedes contactarte:<br />
                                            Chat en www.colpatria.com
                                            Horarios de atención:
                                            Lunes a Viernes de 7:00 am a 7:00pm - Sábados de 8:00 am a 5:00pm
                                            Multilínea:
                                            Bogotá 7561616 - Cali 4891616 - Medellín 6041616 - Barranquilla 3851616 - Ibagué 2771616 - Pereira 3401616
                                            Cartagena 6931616 - Neiva 8631616 - Bucaramanga 6971616 - Cucuta 5955795 - Valledupar 5898480
                                            Popayán 8353735 - Villavicencio 6836126 - Santa Marta 4365966 - Resto del País 01 8000 522 522
                                            Mail: servicliente@colpatria.com
                                        </p>
                                    </div>
                                    <div class="col-xs-12 col-sm-4 info-log">
                                        <div class="logo-info">
                                            <img src="~/Images/Logos/colpatria_logo.png" alt="Alternate Text" />
                                        </div>
                                    </div>
                                    <div style="clear: both"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
